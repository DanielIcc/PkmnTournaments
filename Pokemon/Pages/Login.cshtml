@page
@model LoginModel
@{
    ViewData["Title"] = "Iniciar sesión";
}

<div class="w-100 d-flex align-items-center justify-content-center login-bg">
    <div class="container-fluid h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-10 col-md-8 col-lg-6 col-xl-4">
                <div class="card bg-dark text-white" style="">
                    <div class="card-body text-center">
                        <h2 class="fw-bold mb-5 text-uppercase">Bienvenido</h2>
                        <form method="post" class="form">
                            <div class="form-outline mb-4">
                                <input asp-for="Username" type="text" placeholder="Usuario" class="form-control">
                            </div>
                            <div class="form-outline mb-4">
                                <input asp-for="Password" type="password" placeholder="Contraseña" class="form-control">
                            </div>
                            <div class="form-outline mb-4 d-grid gap-2">
                                <button type="submit" class="btn btn-info">Ingresar </button>
                            </div>
                            <hr class="my-4">
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

